<h1>New Review</h1>

<% if @review.errors.any? %>
  <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag(reviews_url, method: 'post') do %>

  <div>
    <%= label_tag :movie_id %><br />
    <%= select_tag :movie_id,
                    options_from_collection_for_select(Movie.all, :id, :title) %>
  </div>

  <div>
    <%= label_tag :summary %><br />
    <%= text_field_tag :summary, "", size: 80 %>
  </div>

  <div>
    <%= label_tag :rating %><br />
    <%= number_field_tag :rating %>
  </div>


  <div>
    <%= submit_tag "Create Review" %>
  </div>
<% end %>
